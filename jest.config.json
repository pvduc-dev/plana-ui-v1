{
  "preset": "ts-jest",
  "testEnvironment": "jest-environment-jsdom",
  "setupFilesAfterEnv": [
    "<rootDir>/setupTest.ts"
  ],
  "transform": {
    "\\.(ts|tsx)$": "babel-jest"
  },
  "transformIgnorePatterns": [
      "node_modules/(?!(react-dnd)/).+$"
  ],
  "collectCoverage": false,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.stories.tsx",
    "!src/**/*.d.ts",
    "!src/index.ts",
    "!src/components/**/index.ts"
  ],
  "moduleNameMapper": {
    "\\.css$": "identity-obj-proxy"
  }
}
